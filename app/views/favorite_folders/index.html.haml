= javascript_include_tag "favorite_folder_modal.js"

= render partial: './header'
= render partial: 'favorite_folder_create_modal'

.favorite-index
  .favorite-index-body
    .favorite-index-title.clearfix
      .favorite-index-title__text
        お気にいり
      .favorite-index-title__create
        %button.favorite-index-title__button
          %span お気に入りを作成する
    .favorite-index-my.clearfix
      .favorite-index-my__text
        マイお気にいり
      .favorite-index-my__number
        お気にいり #{@favorite_folders.count}フォルダ
    .favorite-index-folders
      - @favorite_folders.each do |favorite_folder|
        - if favorite_folder.favorites.present?
          %a.favorite-index-list{href: '/users/1/favorite_folders/1'}
            %img{src: "#{favorite_folder.rooms.last.room_images.first.image.url}"}
            .favorite-index-list-text
              .favorite-index-list-text__name
                = favorite_folder.name
              .favorite-index-list-text__number
                #{favorite_folder.favorites.count}軒の宿泊先
        - else
          %a.favorite-index-list{href: '/users/1/favorite_folders/1',style: "background-image:url(/assets/back_black.JPG);"}
            .favorite-index-list-text
              .favorite-index-list-text__name
                = favorite_folder.name
              .favorite-index-list-text__number
                #{favorite_folder.favorites.count}軒の宿泊先
