= render partial: './header'

.d-message
  .d-message-body
    .d-message-top-wrapper
      %label
        %select.d-message-top-wrapper__select

    .d-message-main-wrapper

      - @messages.each do |message|
        .d-message-item
          .d-message-item-body.clearfix
            %a{href: "/users/1/my_messages/1"}
              .d-message-avatar
                %img{src: "/assets/no-image.png", alt: "avatar_image", style: "width: 50px; height: 50px;"}
              .d-message-info
                .d-message-info__user-name
                  ひろし
                .d-message-info__date
                  = message.create_date
              .d-message-content
                .d-message-content__title
                  こんにちは
                .d-message-content__message
                  = message.message
              .d-message-kind
                .d-message-kind__text
                  = message.kind_i18n

